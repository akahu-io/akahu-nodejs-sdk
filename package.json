{
  "name": "akahu",
  "version": "0.0.1",
  "description": "Javascript SDK for Akahu",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "npm run build:clean && npm run build:package && npm run build:types",
    "build:clean": "rm -rf dist",
    "build:package": "rollup -c",
    "build:types": "tsc --project tsconfig.build.json",
    "docs": "npx typedoc",
    "test": "jest",
    "lint": "echo \"Error: no linter specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akahu-io/akahu-nodejs-sdk.git"
  },
  "keywords": [
    "node",
    "js",
    "javascript",
    "sdk",
    "akahu"
  ],
  "author": "Akahu",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/akahu-io/akahu-nodejs-sdk/issues"
  },
  "homepage": "https://github.com/akahu-io/akahu-nodejs-sdk#readme",
  "jest": {
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      ".ts": "ts-jest"
    },
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.2.3",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.12",
    "@types/uuid": "^8.3.1",
    "axios-mock-adapter": "^1.19.0",
    "jest": "^27.0.6",
    "rollup": "^2.55.0",
    "ts-jest": "^27.0.4",
    "typedoc": "^0.21.5",
    "typedoc-plugin-markdown": "^3.10.4",
    "typedoc-plugin-merge-modules": "^3.0.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "tslib": "^2.3.0",
    "uuid": "^8.3.2"
  }
}
